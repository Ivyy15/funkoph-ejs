<!DOCTYPE html>
    <%- include('./partials/header.ejs')  %>

    <%- include('./partials/navbar.ejs')  %>
    <body>  

        <link href="/public/css/sign-up.css" rel="stylesheet" type="text/css">
        <link href="/public/css/sign-up.css.map" rel="stylesheet" type="text/css">
        <link href="/public/css/sign-up.scss" rel="stylesheet" type="text/css">

     
  
        <div class="container py-5">
           
            <center>
                <div class="col-12">
                    <img src="img/funkophblack.png" width="250">
                </div>
                <div class="col-12 my-5">
                    <img class="rounded" src="img/signin/Michael-Scott-Funko-Pop-Figure.jpg" width="500" style="max-width:100%;">
                </div>

                <p class="text-dark fs-4 fw-bold"> SIGN IN</p> 
            </center>

            <form class="row g-3 justify-content-center">
                <div class="col-8">
                  <input type="email" class="Email-Address" id="inputEmail" placeholder=" Email Address" required>
                  <span></span>
                </div>
                <div class="col-8">
                  <input type="password" class="Input-Password" id="inputPwd" placeholder=" Password" required>
                  <span></span>
                </div>
                <div class="col-8 forgot-password">
                    Forgot Password?
                
                </div>
                
                

                <div class="col-12 text-center"> 
                    
                    <div class="sign-up-main" >
                    
                     <button type="submit" class="btn btn-dark btn-lg my-1 ">
                        
                      <div class="Class-Text"> LOG IN
                     </div>  
                        </button><br> 

                        <div class="mt-2">
                            <small class="Funko-new mt-2"> New to Funko? <a href="/sign-up" style="text-decoration: none;"> Sign up now.</a> </small>
                        </div>
                    </div>
                </div>
            </form>
  
        </div>

    <div style="flex-grow:1"></div>

    <%- include('./partials/footer.ejs')  %>

