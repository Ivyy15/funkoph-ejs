<!DOCTYPE html>
    <%- include('./partials/header.ejs')  %>

    <%- include('./partials/navbar.ejs')  %>

    <link href="/public/css/products.css" rel="stylesheet" type="text/css">
    <link href="/public/css/cart.css" rel="stylesheet" type="text/css">
    <link href="/public/css/home.css" rel="stylesheet" type="text/css">
    <link href="/public/css/main.css" rel="stylesheet" type="text/css">

    <link href="/public/css/main.css" rel="stylesheet" type="text/css">
    <body>
        <main class="container my-3">
            <div class="p-4 p-md-5 mb-4 my-5" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.1) 100%), url('img/home/Background.png'); background-position:center; background-size: cover; background-repeat: no-repeat;">
                <div class="d-flex flex-column h-100 p-3 pb-1 text-white text-shadow-1">
                <div class="row">

                    <div class="col-md-6 px-0">
                        <h1 class="text-dark">Everyone is a collector of something!</h1>
                        <form action="/products">
                            <button type="submit" class="btn btn-dark mt-5 fw-bold rounded-0 shop-col"> SHOP COLLECTION </button>
                        </form>
                        <div class="arrow-icons m-3">   
                            <i class='bx bxs-up-arrow up-arrow'></i>
                            <i class='bx bxs-down-arrow down-arrow'></i>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <img src="img/home/Tanjiro.png" width="40%" align="right" alt="Tanjiro">
                    </div>
                </div>
            </div>
        </main>

        <div class="container py-5">

            <div class="row">
                <div class="owl-carousel owl-theme">
                  <div class="ml-2 mr-2">
                    <a href="#"><img src="img/home/HP.png" title="Harry Potter" alt="Harry Potter"></a>
                  </div>
                  <div class="ml-2 mr-2">
                    <a href="#"><img src="img/home/Disney.png" title="Disney" alt="Disney"></a>
                  </div>
                  <div class="ml-2 mr-2">
                    <a href="#"><img src="img/home/Marvel.png" title="Marvel" alt="Marvel"></a>
                  </div>
                  <div class="ml-2 mr-2">
                    <a href="#"><img src="img/home/DC.png" title="DC" alt="DC"></a>
                  </div>
                  <div class="ml-2 mr-2">
                    <a href="#"><img src="img/home/starwars.png" title="Star Wars" alt="Star Wars"></a>
                  </div>
                  <div class="ml-2 mr-2">
                    <a href="#"><img src="img/home/Anime.png" title="Anime" alt="Anime"></a>
                  </div>
                </div>
            </div>
        </div>

        <div class="container my-5">

            <div class="row g-0 mb-5 justify-content-center">
                <div class="col-md-6 justify-content-center">
                    <main class="container">
                        <div class="p-4" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.1) 100%), url('img/home/hamiltonbanner.png'); background-position:center; background-size: cover; background-repeat: no-repeat;">
                            <div class="d-flex flex-column h-100 p-4 text-white">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="curtain-call">
                                        <h4 class="mt-3"> Curtain Call! </h4>
                                        <h2> Now Showing: Hamilton Act 2 </h2>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <a href="/products"><img src="img/home/Hamilton.png" width="80%" alt="Hamilton"></a>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>

                <div class="col-md-6 justify-content-center">
                    <main class="container">
                        <div class="p-4" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.1) 100%), url('img/home/encantobanner.png'); background-position:center; background-size: cover; background-repeat: no-repeat;">
                            <div class="d-flex flex-column h-100 p-4 text-white">
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="disney-collection">
                                        <h2 class="mt-5 pt-2"> What's your Gift? </h2>
                                        <h6> Complete your Disney Collection! </h6>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <a href="/featured"><img src="img/home/mirabel.png" width="80%" alt="Mirabel"></a>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
            </div>
            
        </div>

    <div style="flex-grow:1"></div>

    <%- include('./partials/footer.ejs')  %>

        <script src="https://code.jquery.com/jquery-3.6.0.slim.js" integrity="sha256-HwWONEZrpuoh951cQD1ov2HUK5zA5DwJ1DNUXaM6FsY=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>

        <script>
            $('.owl-carousel').owlCarousel({
              stagePadding:0,
              loop:false,
              margin:15,
              dots:false,
              nav:false,
              responsive:{
                  0:{
                      items:3
                  },
                  600:{
                      items:3
                  },
                  1000:{
                      items:6
                  }
                }
            })
        </script>
    </body>
</html>